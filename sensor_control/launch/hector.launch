<?xml version="1.0"?>

<launch>

  <arg name="geotiff_map_file_path" default="$(find hector_geotiff)/maps"/>

  <param name="/use_sim_time" value="true"/>

  <!--<node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find hector_slam_launch)/rviz_cfg/mapping_demo.rviz"/>-->

  <include file="$(find hector_mapping)/sensor_control/launch/mapping_default.launch"/>

  <include file="$(find hector_geotiff)/launch/geotiff_mapper.launch">
    <arg name="trajectory_source_frame_name" value="scanmatcher_frame"/>
    <arg name="map_file_path" value="$(arg geotiff_map_file_path)"/>
  </include>

    <node pkg="move_base" type="move_base" name="move_base" output="screen">
      <param name="controller_frequency" value="10.0"/>
      <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
      <rosparam file="$(find mbzirc_husky)/sensor_control/cfg/move_base/costmap_common_params.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find mbzirc_husky)/cfg/move_base/costmap_common_params.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find mbzirc_husky)/sensor_control/cfg/move_base/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find mbzirc_husky)/sensor_control/cfg/move_base/global_costmap_params.yaml" command="load" />
      <rosparam file="$(find mbzirc_husky)/sensor_control/cfg/move_base/dwa_trajectory_planner.yaml" command="load" />
    </node>


</launch>
